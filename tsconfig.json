{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
//    "strict": true,
//    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "bin/*"]
    }
  },
  "include": ["src/**/*"]
}

